
<%- include ("../partials/header") %>
<%- include ("../partials/main_nav") %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Name"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="contactNumberTextField"
            placeholder="Enter the Contact Number:"
            name="contactNumber"
            required
          />
        </div>

        <div class="from-group">
          <label for="descTextField">Contact Email</label>
          <input
            type="email"
            class="form-control"
            id="emailTextField"
            placeholder="Enter the Email Address:"
            name="email"
            required
          />
        </div>
        <br>
        <div>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
        </div>

      </form>
    </div>
  </div>
</div>
<br>
<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>