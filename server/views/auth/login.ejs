<%- include ("../partials/header") %>
<%- include ("../partials/main_nav") %>

<main class="container">
  <br>
  <div class="card text-bg-dark mb-3" style="max-width: 80rem;">
    <div class="card-header text-center"><h3>Login Page<h3></div>
    </div>
<!--Message Area-->
<% if(messages.length > 0 ) { %>
<div class="alert alert-danger">
    <%=messages %>
</div>
<% } %>
<div class="container-sm">
<div class="text-center">
    <div class="offset-md-4 col-md-4">
        <form method="POST" autocomplete="off">
            <img class="rounded mx-auto d-block" src="Assets/images/logoimg.png" alt="logo" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please Login</h1>
        
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="username" name="username" placeholder="Enter User Name" required autofocus>
              <label for="username">User Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              <label for="password">Password</label>
            </div>
            <div class="mb-3">
                <input class="btn btn-lg btn-success" type="submit" value="Login">
                <a href="/">
                    <input type="button" class="btn btn-lg btn-warning" value="Cancel">
                </a> 
            </div>
          </form>
    </div>
</div>
</div>
<br>
</main>



<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>